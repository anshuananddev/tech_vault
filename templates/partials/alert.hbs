    <span class="fas fa-exclamation-circle"></span>
    
    <span class="error_msg">{{error}}</span>
    
    <div class="error_close-btn">
        <span class="fas">&times;
        </span>
    </div>
</div>
{{/if}}

{{#if info}}
<div class="infoalert hide">
    <span class="fas fa-info"></span>
    
    <span class="infomsg">{{info}}</span>
    
    <div class="infoclose-btn">
        <span class="fas">&times;
        </span>
    </div>
</div>
{{/if}}







{{!-- Scripts for hiding and showing alert --}}
<script>
    
        $('.alert').addClass("show");
        $('.alert').removeClass("hide");
        $('.alert').addClass("showAlert");
        setTimeout(function () {
            $('.alert').removeClass("show");
            $('.alert').addClass("hide");
        }, 5000);
    
    $('.close-btn').click(function () {
        $('.alert').removeClass("show");
        $('.alert').addClass("hide");
    });
</script>

