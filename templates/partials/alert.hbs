{{!-- Template usage --}}
{{#if warnings}}
<div class="alert hide">
    <span class="fas fa-exclamation-triangle"></span>
    {{#each warnings}}
    <span class="msg">Warning : {{this}}</span><br>
    {{/each}}
    <div class="close-btn">
        <span class="fas">&times;</span>
    </div>
</div>
{{/if}}

{{#if success}}
<div class="success_alert hide">
    <span class="fas fa-check-square"></span>
    
    <span class="success_msg">{{success}}</span>
    
    <div class="success_close-btn">
        <span class="fas">&times;
        </span>
    </div>
</div>
{{/if}}

{{#if error}}
